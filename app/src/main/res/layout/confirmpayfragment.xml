<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <RelativeLayout
        android:id="@+id/upload_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="确认并选择支付方式"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="20dp" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay_line"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/pay_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:padding="7dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_81" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="基本信息"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/go_jibenxinxi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon2_41" />

                    <View
                        android:id="@+id/jibenxinxi_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/go_jibenxinxi"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:text="陈琳     性别：女   病症：手外伤康复\n出生日期上海：2002/02/15\n所在地区：上海"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_bg"
                    android:padding="7dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_81" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="病情信息"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/go_jibenxinxi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon2_41" />

                    <View
                        android:id="@+id/jibenxinxi_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/go_jibenxinxi"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:text="陈琳     性别：女   病症：手外伤康复\n出生日期上海：2002/02/15\n所在地区：上海"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_bg"
                    android:padding="7dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon2_145" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="病情信息"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/go_jibenxinxi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon2_41" />

                    <View
                        android:id="@+id/jibenxinxi_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/go_jibenxinxi"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF" />

                    <ImageView
                        android:id="@+id/pay_pic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/touxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/pay_pic"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/pay_pic"
                        android:text="李明哲[骨关节病]\n上海市第一人民医院"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:text="￥1200"
                        android:textColor="#9FBE3C"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_bg"
                    android:padding="7dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon2_114" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="视频"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/go_jibenxinxi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon2_41" />

                    <View
                        android:id="@+id/jibenxinxi_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/go_jibenxinxi"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF" />

                    <RelativeLayout
                        android:id="@+id/pay_shipin"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/go_jibenxinxi"
                        android:layout_marginTop="20dp"
                        android:background="#000000" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon2_101" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/pay_imgs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pay_shipin"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >
					
                       
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pay_imgs"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFFFFF"
                        android:text="我的右肩无法大角度活动" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_bg"
                    android:padding="7dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_67" />

                    <TextView
                        android:id="@+id/zhifufangshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="支付方式"
                        android:textColor="#FFFFFF" />

                    <View
                        android:id="@+id/jibenxinxi_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/zhifufangshi"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF" />

                    <ImageView
                        android:id="@+id/pay_pic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/pay_pic"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/pay_pic"
                        android:text="支付宝"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/pay_pic"
                        android:textColor="#FFFFFF"
                        android:text="推荐支付宝用户支付" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/jibenxinxi_line"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon2_104"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
         <View
             android:id="@id/pay_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_above="@+id/upload_next_btn"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@id/upload_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/icon_12"
            android:text="确认并支付" />
    </RelativeLayout>

</LinearLayout>