<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="我的诊疗"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="20dp" >

        <RelativeLayout
            android:id="@+id/item_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_81" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="查看会诊资料"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:src="@drawable/icon2_41" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_1"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:padding="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:id="@+id/dd">

                <ImageView
                    android:id="@+id/wodezenliao_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/touxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/wodezenliao_pic"
                    android:text="李哲明"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="诊疗医师"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/wodezenlao_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/dd"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/wodezenlao_line"
                android:layout_marginTop="5dp"
                android:background="#000000" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon2_101" />
            </RelativeLayout>
            <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
      				android:layout_below="@id/d1"
      				android:layout_marginTop="10dp"
      				android:textColor="#FFFFFF"
                    android:text="备注：无"/>
        </RelativeLayout>
         <RelativeLayout
            android:id="@+id/item_3"
            android:layout_width="match_parent"
            android:layout_below="@id/item_2"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:padding="10dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"	
                android:text="追问"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:src="@drawable/icon2_41" />
        </RelativeLayout>
                <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/next_btn"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/icon_12"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="评论" />
    </RelativeLayout>

</LinearLayout>