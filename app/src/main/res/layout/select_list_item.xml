<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/click_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon2_95" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingRight="40dp"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/select_list_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang" 
            />

        <TextView
            android:id="@+id/select_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/select_list_pic"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_alignTop="@id/select_list_pic"
            android:textColor="#FFFFFF"
            android:text="李哲明[关节病]" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
             android:layout_toRightOf="@id/select_list_pic"
            android:layout_marginLeft="5dp"
           android:layout_alignBottom="@id/select_list_pic"
           >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_101" />
            <TextView 
                android:id="@+id/select_list_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
				android:singleLine="true"
				android:textColor="#FFFFFF"
				android:textSize="12sp"
                android:text="2.3KM上海市第一骨科医院..."/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/select_zambia_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon3_034" />

        <TextView
            android:id="@+id/select_zambia_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/select_zambia_btn"
            android:text="22"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>