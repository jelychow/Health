<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
     >

    <RelativeLayout
        android:id="@+id/loginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         >
        <include android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <RelativeLayout
            android:background="#47697a"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_mid"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/loginTop"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp" >

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#D3C9BF" >
            </LinearLayout>

            <EditText
                android:id="@+id/Ledit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/security_row_username"
                android:hint="昵称/邮箱"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#D3C9BF" >
            </LinearLayout>

            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/Ledit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ledit_name"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/security_row_password"
                android:drawableRight="@drawable/security_row_forgot"
                android:hint="密码填写在这里"
                android:inputType="textPassword"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#D3C9BF" >
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/text_huo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/linear_top"
            android:layout_marginLeft="0dp"

            android:text="登陆"
            android:background="#9fbe3c"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#9E8C7B"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <FrameLayout
            android:id="@+id/text_xia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_huo"
            android:paddingTop="10dp"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:text="记住密码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:text="忘记密码"/>
            </FrameLayout>

        <FrameLayout
            android:id="@+id/button_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_xia"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/security_row_sina"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:text=" 微博"
                android:textColor="#ffffff" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/security_row_qq"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="QQ帐号登陆"
                android:textColor="#ffffff"
                android:id="@+id/buton_qq1" />
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/security_row_qq"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="QQ帐号登陆"
                android:textColor="#ffffff"
                android:id="@+id/buton_qq3" />
        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F9F8F1" >

        <TextView
            android:id="@+id/text_xuyao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="15dp"
            android:text="需要一个帐号？" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_xuyao"
            android:paddingTop="5dp"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="30dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/login_down"
        android:background="@drawable/security_row_sign_bg" />

</RelativeLayout>