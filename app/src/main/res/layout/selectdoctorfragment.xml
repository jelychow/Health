<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/select_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="选择诊疗医师"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2_145" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_top"
        android:layout_above="@+id/select_bottom"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <View
            android:id="@+id/select_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/sousuo_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/select_line"
            android:background="#90FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_38" />
 
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:hint="搜索治疗医师"
                android:textColor="#8A8A8A"
                android:textColorHint="#8A8A8A"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/select_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/sousuo_layout"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="按名称选择"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon2_41" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/select_2"
            android:background="#50ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="历史诊疗师"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/yishi_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_3"
            android:divider="#00000000"  
            android:dividerHeight="0dip"  
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/select_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#50ffffff" 
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="￥280"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />

        <Button
            android:id="@+id/select_next_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_12"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>